<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="采购单号:" />

        <TextView
            android:id="@+id/item_material_purchase_tvPurchaseNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="供应商:" />

        <TextView
            android:id="@+id/item_material_purchase_tvSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="采购人:" />

        <TextView
            android:id="@+id/item_material_purchase_tvPurchaser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="采购部门:" />

        <TextView
            android:id="@+id/item_material_purchase_tvPurchaseDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="要求时间:" />

        <TextView
            android:id="@+id/item_material_purchase_tvRequireTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="入库时间:" />

        <TextView
            android:id="@+id/item_material_purchase_tvStorageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#444444" />
    </LinearLayout>

</LinearLayout>