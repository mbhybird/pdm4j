<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_above="@+id/filter_result_btnLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/filter_result_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            />
        <ListView
            android:id="@+id/filter_result_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint ="#00000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/filter_result_btnLayout"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/filter_result_SelectAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:gravity="center"
            />
        <Button
            android:id="@+id/filter_result_btnInverseSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="反选"
            android:gravity="center"
            />
        <Button
            android:id="@+id/filter_result_btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消已选"
            android:gravity="center"
            />
        <Button
            android:id="@+id/filter_result_btnOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>