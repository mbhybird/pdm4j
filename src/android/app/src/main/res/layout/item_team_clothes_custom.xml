<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_team_clothes_custom_ivPic"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:scaleType="center"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_team_clothes_custom_ivPic"
        android:layout_toEndOf="@+id/item_team_clothes_custom_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="订单号:" />

            <TextView
                android:id="@+id/item_team_clothes_custom_tvOrderNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="客户名称:" />

            <TextView
                android:id="@+id/item_team_clothes_custom_tvCustName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="接单时间:" />

            <TextView
                android:id="@+id/item_team_clothes_custom_tvAcceptTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:text="约定交付时间:" />

            <TextView
                android:id="@+id/item_team_clothes_custom_tvAppointTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>