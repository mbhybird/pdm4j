<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_design_capture_edit_progress"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:visibility="invisible"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:src="@drawable/empty"
            android:id="@+id/my_design_capture_edit_ivCapture"
            android:layout_width="320dp"
            android:layout_height="360dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_width="70dp"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_height="30dp"
                    android:text="款号" />

                <EditText
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:id="@+id/my_design_capture_edit_etStyleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="款式名称" />

                <EditText
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:id="@+id/my_design_capture_edit_etStyleName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:textSize="15sp"
                    android:layout_height="30dp"
                    android:text="品牌" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="主题" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="波段" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spBand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="70dp"
                    android:textSize="15sp"
                    android:layout_height="30dp"
                    android:text="年度" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="季节" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spSeason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <Button
                    android:background="@drawable/border_line_while"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:text="分类/品类" />

                <Spinner
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/filterType"
                    android:id="@+id/my_design_capture_edit_spStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/my_design_capture_edit_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/button_flat_style"
            android:id="@+id/my_design_capture_edit_btnUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定" />

        <Button
            android:background="@drawable/button_flat_style"
            android:id="@+id/my_design_capture_edit_btnCancel"
            android:text="返回"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>