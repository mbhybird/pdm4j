<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_homepage">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/route_logo_margin_top"
        android:scaleType="fitCenter"
        android:id="@+id/route_ivLogo"
        android:src="@drawable/app_logo" />
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_below="@+id/route_ivLogo"
        android:layout_marginTop="@dimen/route_text_margin_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="智能研发PLM"
            android:textColor="@android:color/white"
            android:textSize="36sp"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="移动端3.0"
            android:textColor="@android:color/white"
            android:textSize="30sp"/>
        <TextView
            android:layout_marginBottom="25dp"
            android:gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="杭州金合时利科技有限公司"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>/>
    </LinearLayout>
</RelativeLayout>