<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_person_custom_ivPic"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:scaleType="center"
        android:src="@drawable/camera" />

    <LinearLayout
        android:id="@+id/item_person_custom_llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/item_person_custom_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号：" />

            <TextView
                android:id="@+id/item_person_custom_tvOrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号：" />

            <TextView
                android:id="@+id/item_person_custom_tvBundleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="门店：" />

            <TextView
                android:id="@+id/item_person_custom_tvStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="品牌：" />

            <TextView
                android:id="@+id/item_person_custom_tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称：" />

            <TextView
                android:id="@+id/item_person_custom_tvCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快递单号：" />

            <TextView
                android:id="@+id/item_person_custom_tvExpressNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_person_custom_llBottomOfList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_person_custom_llTop"
        android:layout_alignLeft="@+id/item_person_custom_llTop"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvOrderState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打版状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvPlateState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车版状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvClothState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="入库状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvStockState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="接单时间：" />

            <TextView
                android:id="@+id/item_person_custom_tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_person_custom_llMid"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="约定交付时间：" />

            <TextView
                android:id="@+id/item_person_custom_tvDDD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_person_custom_llMid"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/item_person_custom_llBottomOfList"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:paddingBottom="45dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备料状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvMatState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单裁状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvCutState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后道状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvAssemblyState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货状态：" />

            <TextView
                android:id="@+id/item_person_custom_tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>