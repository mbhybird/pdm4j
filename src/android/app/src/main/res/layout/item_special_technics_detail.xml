<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_special_technics_detail_ivPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:scaleType="center"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_alignTop="@+id/item_special_technics_detail_ivPic"
        android:layout_toEndOf="@+id/item_special_technics_detail_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="类型:" />

            <TextView
                android:id="@+id/item_special_technics_tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="部位:" />

            <TextView
                android:id="@+id/item_special_technics_tvPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="加工厂:" />

            <TextView
                android:id="@+id/item_special_technics_tvCust"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="金额:" />

            <TextView
                android:id="@+id/item_special_technics_tvSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="安排时间:" />

            <TextView
                android:id="@+id/item_special_technics_tvArrangeTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="收回时间:" />

            <TextView
                android:id="@+id/item_special_technics_tvRevertTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="电话:" />

            <TextView
                android:id="@+id/item_special_technics_tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="phone" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>