<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buyer_sample_edit_btnAddNotes"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buyer_sample_edit_btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_flat_style"
                android:text="买手样衣" />

            <Button
                android:id="@+id/buyer_sample_edit_btnAssignTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_flat_style"
                android:text="安排任务" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/buyer_sample_input_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/buyer_sample_edit_iv"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/linearLayout"
                    android:layout_marginStart="5dp"
                    android:scaleType="center"
                    android:src="@drawable/camera" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/buyer_sample_edit_iv"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/buyer_sample_edit_etSampleNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@null"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-+*/\."
                        android:drawableBottom="@drawable/shape_et_bottom_line"
                        android:hint="请输入样衣编号"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/buyer_sample_edit_etCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/buyer_sample_edit_btnCategory"
                            android:background="@null"
                            android:drawableBottom="@drawable/shape_et_bottom_line"
                            android:hint="请输入类目"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/buyer_sample_edit_btnCategory"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_alignBaseline="@+id/buyer_sample_edit_etCategory"
                            android:layout_alignParentEnd="true"
                            android:text="选择" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/buyer_sample_edit_etSamplePoint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/buyer_sample_edit_btnSamplePoint"
                            android:background="@null"
                            android:drawableBottom="@drawable/shape_et_bottom_line"
                            android:hint="请输入样衣参考点"
                            android:imeOptions="actionNext"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/buyer_sample_edit_btnSamplePoint"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_alignBaseline="@+id/buyer_sample_edit_etSamplePoint"
                            android:layout_alignParentEnd="true"
                            android:text="选择" />
                    </RelativeLayout>


                    <EditText
                        android:id="@+id/buyer_sample_edit_etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@null"
                        android:drawableBottom="@drawable/shape_et_bottom_line"
                        android:hint="请输入单价"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal" />

                    <EditText
                        android:id="@+id/buyer_sample_edit_etBuyer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@null"
                        android:drawableBottom="@drawable/shape_et_bottom_line"
                        android:hint="请输入购买人"
                        android:imeOptions="actionNext"
                        android:inputType="text" />


                    <EditText
                        android:id="@+id/buyer_sample_edit_etStyleNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:background="@null"
                        android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-+*/\."
                        android:drawableBottom="@drawable/shape_et_bottom_line"
                        android:hint="请输入应用款号"
                        android:imeOptions="actionNext"
                        android:inputType="text" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/buyer_sample_edit_etBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_toLeftOf="@+id/buyer_sample_edit_btnBrand"
                            android:background="@null"
                            android:drawableBottom="@drawable/shape_et_bottom_line"
                            android:hint="请输入品牌"
                            android:imeOptions="actionDone"
                            android:inputType="text" />

                        <Button
                            android:id="@+id/buyer_sample_edit_btnBrand"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_alignBaseline="@+id/buyer_sample_edit_etBrand"
                            android:layout_alignParentEnd="true"
                            android:text="选择" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/buyer_sample_edit_btnSave"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_gravity="left"
                        android:text="保存" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buyer_sample_edit_btnFlowRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_flat_style"
                android:text="流向记录" />

            <Button
                android:id="@+id/buyer_sample_edit_btnBuyerNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_flat_style"
                android:text="买手批注" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/buyer_sample_edit_rvRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <Button
        android:id="@+id/buyer_sample_edit_btnAddNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_flat_style"
        android:text="添加记录"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buyer_sample_edit_btnBorrowSample"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_flat_style"
        android:text="借取样衣"
        android:visibility="invisible" />

</RelativeLayout>