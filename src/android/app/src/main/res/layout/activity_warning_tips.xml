<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/warning_tips_tvPersonCust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_selected_grey_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="个定"
            android:textColor="@drawable/font_selected_blue_style"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/warning_tips_tvTeamCust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_selected_grey_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="团定 "
            android:textColor="@drawable/font_selected_blue_style"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/warning_tips_tvBatchCust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_selected_grey_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="批定"
            android:textColor="@drawable/font_selected_blue_style"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/warning_tips_tvResearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_selected_grey_style"
            android:gravity="center"
            android:padding="10dp"
            android:text="研发"
            android:textColor="@drawable/font_selected_blue_style"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#54a1d9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/warning_tips_btnDayOne"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_line_while"
                android:text="1天" />

            <Button
                android:id="@+id/warning_tips_btnDayThr"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_line_while"
                android:text="3天" />

            <Button
                android:id="@+id/warning_tips_btnDaySev"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_line_while"
                android:text="7天" />

            <Button
                android:id="@+id/warning_tips_btnDayDef"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:background="@drawable/border_line_while"
                android:text="自定义" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D7D7" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/warning_tips_etSearch"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="8dp"
                android:layout_toStartOf="@+id/warning_tips_btnSearch"
                android:background="#e3e3e3"
                android:gravity="center"
                android:hint="请输入要搜索的内容" />

            <Button
                android:id="@+id/warning_tips_btnSearch"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:text="搜索" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D7D7" />


        <LinearLayout
            android:id="@+id/warning_tips_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/warning_tips_tvAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="全"/>

            <TextView
                android:id="@+id/warning_tips_tvMatState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="料"/>

            <TextView
                android:id="@+id/warning_tips_tvPlateState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="版"/>

            <TextView
                android:id="@+id/warning_tips_tvCutState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="裁"/>

            <TextView
                android:id="@+id/warning_tips_tvClothState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="做"/>

            <TextView
                android:id="@+id/warning_tips_tvAssemblyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="后道"/>

            <TextView
                android:id="@+id/warning_tips_tvStockState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="入库"/>

            <TextView
                android:id="@+id/warning_tips_tvDeliver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:textSize="14sp"
                android:textColor="@drawable/font_selected_blue_style"
                android:text="发货"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D7D7" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/warning_tips_refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/warning_tips_rv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </RelativeLayout>
</LinearLayout>