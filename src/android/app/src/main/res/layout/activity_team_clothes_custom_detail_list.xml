<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/team_clothes_custom_detail_list_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="全"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvMatState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="料"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvPlateState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="版"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvCutState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="裁"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvClothState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="做"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvAssemblyState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="后道"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvStockState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="入库"/>

        <TextView
            android:id="@+id/team_clothes_custom_detail_list_tvDeliver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="14sp"
            android:textColor="@drawable/font_selected_blue_style"
            android:text="发货"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D6D7D7"
        android:layout_below="@+id/team_clothes_custom_detail_list_ll"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/team_clothes_custom_detail_list_rvRecord"
        android:layout_below="@+id/team_clothes_custom_detail_list_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</RelativeLayout>