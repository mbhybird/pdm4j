<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="2dp"
        android:background="#B8B8B8" />

    <LinearLayout
        android:id="@+id/item_material_purchase_detail_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_material_purchase_detail_tvMaterialNo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="物料编码"
            android:textColor="#545151"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_material_purchase_detail_tvColor"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="颜色"
            android:textColor="#545151"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_material_purchase_detail_tvWidth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="宽幅"
            android:textColor="#545151"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_material_purchase_detail_tvPurchaseNum"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="采购数量"
            android:textColor="#545151"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_material_purchase_detail_tvInStockNum"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="入库数量"
            android:textColor="#545151"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#B8B8B8"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/item_material_purchase_detail_linearlayout"
        android:background="#B8B8B8" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_material_purchase_detail_rvGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@+id/item_material_purchase_detail_linearlayout" />
</RelativeLayout>
