<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_cost_accounts_ivPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:scaleType="center"
        android:src="@drawable/empty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/item_cost_accounts_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="型号:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvSNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="面料费用:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvMaterialCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="辅料费用:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvAccessory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="加工费用" />

            <TextView
                android:id="@+id/item_cost_accounts_tvAddCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="外加工费用:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvOutAddCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="特殊工艺费用:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvSpecialCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="成本价:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvProductionCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="吊牌价:" />

            <TextView
                android:id="@+id/item_cost_accounts_tvTagCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>