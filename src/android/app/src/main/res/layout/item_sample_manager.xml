<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_sample_manager_ivPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:scaleType="center"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toRightOf="@+id/item_sample_manager_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="款号:" />

            <TextView
                android:id="@+id/item_sample_manager_tvStyleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="样衣编号:" />

            <TextView
                android:id="@+id/item_sample_manager_tvSampleNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="设计师:" />

            <TextView
                android:id="@+id/item_sample_manager_tvDesigner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="版师:" />

            <TextView
                android:id="@+id/item_sample_manager_tvTempleteMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="车版师:" />

            <TextView
                android:id="@+id/item_sample_manager_tvTechnician"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="进度版本:" />

            <TextView
                android:id="@+id/item_sample_manager_tvProgressVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>