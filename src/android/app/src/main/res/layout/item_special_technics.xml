<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_special_technics_ivPic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:scaleType="center"
        android:src="@drawable/camera" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/item_special_technics_ivPic"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="款号:" />

            <TextView
                android:id="@+id/item_special_technics_tvNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="设计师:" />

            <TextView
                android:id="@+id/item_special_technics_tvMaker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="分类品类:" />

            <TextView
                android:id="@+id/item_special_technics_tvStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#444444"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>