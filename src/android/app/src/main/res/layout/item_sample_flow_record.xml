<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:id="@+id/item_sample_flow_record_Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序号：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="借取时间：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvBorrowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_sample_flow_record_Mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_sample_flow_record_Top"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="借取人：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvBorrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_sample_flow_record_Mid"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="污损记录：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="备注：" />

            <TextView
                android:id="@+id/item_sample_flow_record_tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>